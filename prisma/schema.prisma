// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Employee {
  userId   String     @id @default(uuid())
  username String
  email String  @unique
  avatar  String
  password  String
  birthdate  String
  registeredAt  DateTime
  position  String
  salary Salary?
  bank Bank?
  crypto Crypto?

}
model Salary {
  id String  @id @default(uuid()) 
  userId String @unique
  amount Employee  @relation(fields: [userId], references: [userId])
}

model Bank {
  id String  @id @default(uuid())
  userId String @unique
  iban Employee   @relation(fields: [userId], references: [userId])
  bic String   
}

model Crypto  {
  id String  @id @default(uuid())
  userId String @unique
  bitcoinAddress Employee   @relation(fields: [userId], references: [userId])
}
